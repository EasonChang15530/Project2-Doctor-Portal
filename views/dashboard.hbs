<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">{{msg}}</h1>
    <p class="lead">This is a modified jumbotron that occupies the entire horizontal space of its parent.</p>
  </div>
</div>

<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2 m-5 b-5 p-5">

        <p>
          <a class="btn btn-primary" data-toggle="collapse" href="#addPatient" role="button" aria-expanded="false"
            aria-controls="addPatient" data-toggle="modal" data-target="#add-modal">
            Add patient
          </a>
          <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#searchPatient"
            aria-expanded="false" aria-controls="searchPatient">
            Search patient
          </button>
        </p>

        {{!-- This is our ADD PATIENT modal --}}

        <div class="modal fade" id="add-modal" tabindex="-1" role="dialog" aria-labelledby="surveyModalTitle"
          aria-hidden="true">
          <div class="modal-dialog modal-dialog-scrollable modal-lg" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h3 class="modal-title text-info" id="surveyModalTitle">
                  Add a New Patient
                </h3>
                {{!-- This is the close button --}}
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="close-modal">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">

                {{!-- THE FORM STARTS HERE --}}

                <form class="clearfix mb-4" action="POST">
                  <div class="form-group">
                    <label for="first-name">First Name</label>
                    <input type="text" id="first-name" class="form-control" aria-describedby="first-name"
                      placeholder="Enter First Name">
                  </div>
                  <div class="form-group">
                    <label for="last-name">Last Name</label>
                    <input type="text" class="form-control" id="last-name" aria-describedby="last-name"
                      placeholder="Enter Last Name">
                  </div>

                  <div class="form-group">
                    <label for="pt-dob">Date of Birth</label>
                    <input type="text" class="form-control" id="pt-dob" aria-describedby="pt-dob"
                      placeholder="01/01/1900">
                  </div>

                  <div class="form-group">
                    <label for="pt-weight">Weight (lbs)</label>
                    <input type="text" class="form-control" id="pt-weight" aria-describedby="pt-weight"
                      placeholder="150">
                  </div>

                  <div class="form-group">
                    <label for="pt-height">Height (in)</label>
                    <input type="text" class="form-control" id="pt-height" aria-describedby="pt-height"
                      placeholder="68">
                  </div>

                  <div class="form-group">
                    <label for="pt-street">Email</label>
                    <input type="text" class="form-control" id="pt-email" aria-describedby="pt-street"
                      placeholder="patient@info.com">
                  </div>

                  <div class="form-group">
                    <label for="pt-street">Phone Number</label>
                    <input type="text" class="form-control" id="pt-phone" aria-describedby="pt-street"
                      placeholder="111-111-1111">
                  </div>

                  <div class="form-group">
                    <label for="pt-street">Street Address</label>
                    <input type="text" class="form-control" id="pt-street" aria-describedby="pt-street"
                      placeholder="123 Happy Street">
                  </div>

                  <div class="form-group">
                    <label for="pt-city">City</label>
                    <input type="text" class="form-control" id="pt-city" aria-describedby="pt-city"
                      placeholder="Philadelphia">
                  </div>

                  <div class="form-group">
                    <label for="pt-state">State</label>
                    <input type="text" class="form-control" id="pt-state" aria-describedby="pt-state" placeholder="PA">
                  </div>

                  <div class="form-group">
                    <label for="pt-zip">Zip Code</label>
                    <input type="text" class="form-control" id="pt-zip" aria-describedby="pt-zip" placeholder="19125">
                  </div>


                  <button id="submit" class="btn btn-primary float-right">Submit</button>
                </form>

                {{!-- THE FORM ENDS HERE --}}

              </div>

            </div>
          </div>
        </div>






















