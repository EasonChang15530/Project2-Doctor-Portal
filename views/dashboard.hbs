<section id="container">

  <header class="header">
    <div class="sidebar-toggle-box">
      <div class="fa fa-bars tooltips burger" data-placement="right" data-original-title="Toggle Navigation"></div>
    </div>
    <!--logo start-->
    <a href="/dashboard" class="logo"><b>WELLNESS <span>CARE GROUP</span></b></a>

    <div class="top-menu">
      <ul class="nav pull-right top-menu">

      </ul>
    </div>
  </header>
  <!--header end-->

  <!--sidebar start-->
  <aside>
    <div id="sidebar" class="nav-collapse">
      <!-- sidebar menu start-->
      <ul class="sidebar-menu">
        <p class="centered my-5"><img class="img-thumbnail" src={{user.about}}></a></p>
        <h4 class="centered">Welcome</h4>
        <h4 class="centered"> Dr. {{user.lastname}}!</h4>
        <li class="logout-wrapper">
          <form id="logout" name="logout" method="get" action="/logout">
            <button class="btn-lg mx-5" type="submit">
              Logout
            </button>
          </form>
        </li>
    </div>
  </aside>
  <!--sidebar end-->

  <!--main content start-->
  <section id="main-content">
    <section class="wrapper">

      <div class="row mt mx-5" id="row1">

        {{!-- SEARCH PATIENT CARD --}}
        <div class="col-md-6 mb">
          <div class="white-panel pn card-pattern">
            <div class="white-header">
              <h5>SEARCH PATIENT</h5>
            </div>
            <div class="button-container">
              <button class="btn btn-lg search-patient-button" id="search-patient" data-toggle="modal"
                data-target="#search-modal">
                <i class="fas fa-search"></i> Search Patient
              </button>
            </div>
          </div>
        </div>

        {{!-- ADD PATIENT CARD --}}
        <div class="col-md-6 mb">
          <div class="white-panel pn card-pattern">
            <div class="white-header">
              <h5>ADD NEW PATIENT</h5>
            </div>
            <div class="button-container">
              <button class="btn btn-lg add-patient-button" id="add-patient" data-toggle="modal"
                data-target="#add-modal">
                <i class="fas fa-plus"></i> Add New Patient
              </button>
            </div>
          </div>
        </div>

      </div>


      <div class="row mt mx-5" id="row2">

        {{!-- CALENDAR CARD --}}
        <div class="col-md-4 mb calendar-wrapper">
          <div class="white-panel">
            <div class="panel-body">
              <div id="date-popover" class="popover top"
                style="cursor: pointer; disadding: block; margin-left: 33%; margin-top: -50px; width: 175px;">
                <div class="arrow"></div>
                <h3 class="popover-title" style="disadding: none;"></h3>
                <div id="date-popover-content" class="popover-content"></div>
              </div>
              <div id="my-calendar"></div>
            </div>
          </div>
        </div>

        {{!-- WEATHER CARD --}}
        <div class="col-md-4 mb">
          <div class="white-panel pn py-3 weather">
            <div id="icon"></div>
            <div id="city"></div>
            <h3 id="temp"></h3>
            <div class="row my-3 text-center">
              <div class="col-6">
                <div id="minTemp"></div>
              </div>
              <div class="col-6">
                <div id="maxTemp"></div>
              </div>
            </div>


          </div>
        </div>

        {{!-- TIME CARD --}}
        <div class="col-md-4 mb">
          <div class="white-panel clock-wrapper pn py-3">

            <i class="fa fa-clock fa-4x"></i>
            <br> <br>

            <h2 id="txt">{{moment date=d format="LT"}}</h2>
            <h5 id="txt">{{moment date=d format="MM/DD/YYYY"}}</h5>


          </div>
        </div>

      </div>
    </section>







    {{!-- This is our ADD PATIENT modal --}}

    <div class="modal fade" id="add-modal" tabindex="-1" role="dialog" aria-labelledby="surveyModalTitle"
      aria-hidden="true">
      <div class="modal-dialog modal-dialog-scrollable modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h3 class="modal-title" id="surveyModalTitle">
              Add a New Patient
            </h3>
            {{!-- This is the close button --}}
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">

            {{!-- THE FORM STARTS HERE --}}

            <form class="clearfix mb-4" action="POST">
              <div class="form-group">
                <label for="first-name">First Name</label>
                <input type="text" id="first-name" class="form-control" aria-describedby="first-name"
                  placeholder="Enter First Name">
              </div>
              <div class="form-group">
                <label for="last-name">Last Name</label>
                <input type="text" class="form-control" id="last-name" aria-describedby="last-name"
                  placeholder="Enter Last Name">
              </div>

              <div class="form-group">
                <label for="pt-dob">Date of Birth</label>
                <input type="text" class="form-control" id="pt-dob" aria-describedby="pt-dob" placeholder="01/01/1900">
              </div>

              <div class="form-group">
                <label for="pt-weight">Weight (lbs)</label>
                <input type="text" class="form-control" id="pt-weight" aria-describedby="pt-weight" placeholder="150">
              </div>

              <div class="form-group">
                <label for="pt-height">Height (in)</label>
                <input type="text" class="form-control" id="pt-height" aria-describedby="pt-height" placeholder="68">
              </div>

              <div class="form-group">
                <label for="pt-street">Email</label>
                <input type="text" class="form-control" id="pt-email" aria-describedby="pt-street"
                  placeholder="patient@info.com">
              </div>

              <div class="form-group">
                <label for="pt-street">Phone Number</label>
                <input type="text" class="form-control" id="pt-phone" aria-describedby="pt-street"
                  placeholder="111-111-1111">
              </div>

              <div class="form-group">
                <label for="pt-street">Street Address</label>
                <input type="text" class="form-control" id="pt-street" aria-describedby="pt-street"
                  placeholder="123 Happy Street">
              </div>

              <div class="form-group">
                <label for="pt-city">City</label>
                <input type="text" class="form-control" id="pt-city" aria-describedby="pt-city"
                  placeholder="Philadelphia">
              </div>

              <div class="form-group">
                <label for="pt-state">State</label>
                <input type="text" class="form-control" id="pt-state" aria-describedby="pt-state" placeholder="PA">
              </div>

              <div class="form-group">
                <label for="pt-zip">Zip Code</label>
                <input type="text" class="form-control" id="pt-zip" aria-describedby="pt-zip" placeholder="19125">
              </div>


              <button id="submit" class="btn btn-lg submit-patient-btn float-right">Submit</button>
            </form>

            {{!-- THE FORM ENDS HERE --}}

          </div>

        </div>
      </div>
    </div>


    {{!-- This is our SEARCH modal --}}

    <div class="modal" tabindex="-1" role="dialog" id="search-modal">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Search for a Patient</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">

            {{!-- this is the js library search bar --}}
            <div class="container">

              <style>
                @media (max-width:500px) {
                  .github-corner:hover .octo-arm {
                    animation: none
                  }

                  .github-corner .octo-arm {
                    animation: octocat-wave 560ms ease-in-out
                  }
                }
              </style>

              <div class="body" align="center">
                <input id="autoComplete" type="text" tabindex="1" placeholder="Patient Name">

                <div class="selection"></div>
              </div>

            </div>
            {{!-- end js library search bar  --}}

          </div>
        </div>
      </div>
    </div>

    {{!-- This is our PATIENT INFO modal --}}

    <div class="modal" tabindex="-1" role="dialog" id="patient-modal">
      <div class="modal-dialog modal-lg" role="document">

        {{!-- this is the first modal content --}}
        <div class="modal-content" id="info-modal">
          <div class="modal-header">
            <h5 class="modal-title">Patient Information</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">

            <div id="patient-info"></div>


            <div class="text-right my-3">
              <button class="btn search-patient-button btn-lg" id="visit-btn" data-toggle="modal"
                data-target="#visit-modal">View
                Visits</button>
              <button class="btn edit-patient-button btn-lg" id="edit-btn">Edit</button>
              <button class="btn delete-patient-button btn-lg" id="delete-btn">Delete</button>
            </div>

          </div>
        </div>

        {{!-- this is the second edit modal content --}}

        <div class="modal-content" id="edit-modal">
          <div class="modal-header">
            <h3 class="modal-title" id="surveyModalTitle">
              Edit Patient
            </h3>
            {{!-- This is the close button --}}
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">

            {{!-- THE FORM STARTS HERE --}}

            <form class="clearfix mb-4" action="POST">
              <div class="form-group">
                <label for="first-name-e">First Name</label>
                <input type="text" id="first-name-e" class="form-control" aria-describedby="first-name-e">
              </div>
              <div class="form-group">
                <label for="last-name-e">Last Name</label>
                <input type="text" class="form-control" id="last-name-e" aria-describedby="last-name-e"
                  placeholder="Enter Last Name">
              </div>

              <div class="form-group">
                <label for="pt-dob-e">Date of Birth</label>
                <input type="text" class="form-control" id="pt-dob-e" aria-describedby="pt-dob-e"
                  placeholder="01/01/1900">
              </div>

              <div class="form-group">
                <label for="pt-weight-e">Weight (lbs)</label>
                <input type="text" class="form-control" id="pt-weight-e" aria-describedby="pt-weight-e"
                  placeholder="150">
              </div>

              <div class="form-group">
                <label for="pt-height-e">Height (in)</label>
                <input type="text" class="form-control" id="pt-height-e" aria-describedby="pt-height-e"
                  placeholder="68">
              </div>

              <div class="form-group">
                <label for="pt-email-e">Email</label>
                <input type="text" class="form-control" id="pt-email-e" aria-describedby="pt-email-e"
                  placeholder="patient@info.com">
              </div>

              <div class="form-group">
                <label for="pt-phone-e">Phone Number</label>
                <input type="text" class="form-control" id="pt-phone-e" aria-describedby="pt-phone-e"
                  placeholder="111-111-1111">
              </div>

              <div class="form-group">
                <label for="pt-street-e">Street Address</label>
                <input type="text" class="form-control" id="pt-street-e" aria-describedby="pt-street-e"
                  placeholder="123 Happy Street">
              </div>

              <div class="form-group">
                <label for="pt-city-e">City</label>
                <input type="text" class="form-control" id="pt-city-e" aria-describedby="pt-city-e"
                  placeholder="Philadelphia">
              </div>

              <div class="form-group">
                <label for="pt-state-e">State</label>
                <input type="text" class="form-control" id="pt-state-e" aria-describedby="pt-state-e" placeholder="PA">
              </div>

              <div class="form-group">
                <label for="pt-zip-e">Zip Code</label>
                <input type="text" class="form-control" id="pt-zip-e" aria-describedby="pt-zip-e" placeholder="19125">
              </div>


              <button id="update-btn" class="btn btn-lg update-patient-btn float-right">Update</button>
            </form>

            {{!-- THE FORM ENDS HERE --}}
          </div>
        </div>



      </div>




    </div>

    {{!-- This is our VISIT HISTORY modal --}}
    <div class="modal fade" tabindex="-1" role="dialog" id="visit-modal" aria-labelledby="exampleModalLongTitle"
      aria-hidden="true">
      <div class="modal-dialog modal-lg modal-dialog-scrollable" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Visit History</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body" id="visit-body">
            ...
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal" id="visit-close">Close</button>
          </div>
        </div>
      </div>
    </div>

    {{!-- ALERT "ADDED SUCCESSFULLY" --}}
    <div class="modal fade" id="addAlert" tabindex="-1" role="dialog" aria-labelledby="addAlert" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="addAlert">Success!</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <h4 class="text-info text-center">Patient added succesfully</h4>
          </div>
          <div class="text-right">
            <button type="button" id="start" class="btn btn-default mr-5 my-4" data-dismiss="modal">
              CLOSE
            </button>
          </div>
        </div>
      </div>
    </div>

    {{!-- ALERT "DELETED SUCCESSFULLY" --}}
    <div class="modal fade" id="deleteAlert" tabindex="-1" role="dialog" aria-labelledby="deleteAlert"
      aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="deleteAlert">Success!</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <h4 class="text-info text-center">Patient deleted succesfully</h4>
          </div>
          <div class="text-right">
            <button type="button" id="start" class="btn btn-default mr-5 my-4" data-dismiss="modal">
              CLOSE
            </button>
          </div>
        </div>
      </div>
    </div>

    {{!-- ALERT UPDATED SUCCESSFULLY" --}}
    <div class="modal fade" id="updateAlert" tabindex="-1" role="dialog" aria-labelledby="updateAlert"
      aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="updateAlert">Success!</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <h4 class="text-info text-center">Patient updated succesfully</h4>
          </div>
          <div class="text-right">
            <button type="button" id="close-update" class="btn btn-default mr-5 my-4" data-dismiss="modal">
              CLOSE
            </button>
          </div>
        </div>
      </div>
    </div>

    {{!-- INPUT VALIDATION MODULE --}}
    <div class="modal fade" id="inputAlert" tabindex="-1" role="dialog" aria-labelledby="inputAlert" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="inputAlert">Something went wrong</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <h4 class="text-info text-center">Please, enter first and last name</h4>
          </div>
          <div class="text-right">
            <button type="button" id="close-update" class="btn btn-default mr-5 my-4" data-dismiss="modal">
              CLOSE
            </button>
          </div>
        </div>
      </div>
    </div>